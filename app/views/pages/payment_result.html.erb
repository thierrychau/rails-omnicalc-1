<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= (@apr*100).to_fs(:percentage, { :precision => 4 }) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <dd><%= @years %></dd>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <dd><%= @principal.to_fs(:currency) %></dd>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <dd><%= @payment.to_fs(:currency) %></dd>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
